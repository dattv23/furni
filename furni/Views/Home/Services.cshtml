@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!-- Start Hero Section -->
<div class="hero">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-5">
				<div class="intro-excerpt">
					<h1>@Localizer["Dịch Vụ"]</h1>
					<p class="mb-4">@Localizer["Xin chào, cảm ơn bạn đã tin dùng. Chúng tôi cung cấp các dịch vụ tiện lợi và nhanh chóng cho người dùng."]</p>
					<p><a href="" class="btn btn-secondary me-2">@Localizer["Mua ngay"]</a><a href="#" class="btn btn-white-outline">@Localizer["Khám phá"]</a></p>
				</div>
			</div>
			<div class="col-lg-7">
				<div class="hero-img-wrap">
					<img src="/images/couch.png" class="img-fluid">
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Hero Section -->
<!-- Start Why Choose Us Section -->
<div class="why-choose-section">
	<div class="container">

		<div class="row my-5">
			<div class="col-6 col-md-6">
				<div class="feature">
					<div class="icon">
						<img src="/images/truck.svg" alt="Image" class="imf-fluid">
					</div>
					<h3>@Localizer["Giao hàng nhanh chóng và miễn phí"]</h3>
					<p>@Localizer["Chúng tôi cam kết cung cấp dịch vụ giao hàng nhanh chóng, đảm bảo đơn hàng của bạn đến tay một cách an toàn và kịp thời. Đặc biệt, việc miễn phí vận chuyển giúp bạn tiết kiệm chi phí mua sắm."]</p>
				</div>
			</div>

			<div class="col-6 col-md-6">
				<div class="feature">
					<div class="icon">
						<img src="/images/bag.svg" alt="Image" class="imf-fluid">
					</div>
					<h3>@Localizer["Mua sắm dễ dàng và thuận tiện"]</h3>
					<p>@Localizer["Trải nghiệm mua sắm của bạn sẽ trở nên dễ dàng và thuận tiện hơn bao giờ hết với giao diện thân thiện, hệ thống thanh toán linh hoạt và đa dạng sản phẩm chất lượng. Chúng tôi luôn đặt sự tiện lợi của khách hàng lên hàng đầu."]</p>
				</div>
			</div>

			<div class="col-6 col-md-6">
				<div class="feature">
					<div class="icon">
						<img src="/images/support.svg" alt="Image" class="imf-fluid">
					</div>
					<h3>@Localizer["Hỗ trợ 24/7"]</h3>
					<p>@Localizer["Đội ngũ hỗ trợ của chúng tôi sẵn lòng hỗ trợ bạn mọi lúc, mọi nơi, 24/7. Bất kể bạn cần giải đáp thắc mắc, hỗ trợ kỹ thuật hay giải quyết vấn đề liên quan đến đơn hàng, chúng tôi luôn ở đây để giúp bạn"]</p>
				</div>
			</div>

			<div class="col-6 col-md-6">
				<div class="feature">
					<div class="icon">
						<img src="/images/return.svg" alt="Image" class="imf-fluid">
					</div>
					<h3>@Localizer["Đổi trả dễ dàng, không phiền toái"]</h3>
					<p>@Localizer["Chúng tôi cam kết chính sách đổi trả linh hoạt và không gây phiền toái cho khách hàng. Nếu có bất kỳ vấn đề nào với sản phẩm nhận được, bạn có thể yên tâm đổi trả để nhận lại sản phẩm hoặc được hoàn tiền một cách nhanh chóng và thuận tiện."]</p>
				</div>
			</div>

		</div>
	</div>
</div>
<!-- End Why Choose Us Section -->
<!-- Start Product Section -->
<div class="product-section" style="margin-top:30px">
	<div class="container">
		<div class="row">

			<!-- Start Column 1 -->
			<div class="col-md-12 col-lg-3 mb-5 mb-lg-0">
				<h2 class="mb-4 section-title">@Localizer["Gợi ý cho bạn."]</h2>
				<p class="mb-4">@Localizer["Khám phá ngay các sản phẩm mới nhất, ưu đãi đặc biệt và sự đa dạng trong bộ sưu tập thời trang của chúng tôi để thể hiện phong cách của bạn một cách tự tin và độc đáo."]</p>
				<p><a href="shop.html" class="btn">@Localizer["Khám phá"]</a></p>
			</div>
			<!-- End Column 1 -->
			<!-- Start Column 2 -->
			<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
				<a class="product-item" href="cart.html">
					<img src="/images/product-1.png" class="img-fluid product-thumbnail">
					<h3 class="product-title">@Localizer["Ghế ăn"]</h3>
					<strong class="product-price">$50.00</strong>

					<span class="icon-cross">
						<img src="/images/cross.svg" class="img-fluid">
					</span>
				</a>
			</div>
			<!-- End Column 2 -->
			<!-- Start Column 3 -->
			<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
				<a class="product-item" href="cart.html">
					<img src="/images/product-2.png" class="img-fluid product-thumbnail">
					<h3 class="product-title">@Localizer["Ghế bar"]</h3>
					<strong class="product-price">$78.00</strong>

					<span class="icon-cross">
						<img src="/images/cross.svg" class="img-fluid">
					</span>
				</a>
			</div>
			<!-- End Column 3 -->
			<!-- Start Column 4 -->
			<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
				<a class="product-item" href="cart.html">
					<img src="/images/product-3.png" class="img-fluid product-thumbnail">
					<h3 class="product-title">@Localizer["Ghế băng"]</h3>
					<strong class="product-price">$43.00</strong>

					<span class="icon-cross">
						<img src="/images/cross.svg" class="img-fluid">
					</span>
				</a>
			</div>
			<!-- End Column 4 -->

		</div>
	</div>
</div>
<!-- End Product Section -->
