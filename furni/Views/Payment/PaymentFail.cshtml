
@{
    Layout = null;
    var message = TempData["Message"] as string;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Document</title>
    <style>
        body {
            background-image: linear-gradient(to right, #e4afcb 0%, #b8cbb8 0%, #b8cbb8 0%, #e2c58b 30%, #c2ce9c 64%, #7edbdc 100%);
        }

        .main {
            border-radius: 40px;
            text-align: center;
            position: fixed;
            background-color: #fff;
            inset: 15vh 25vw;
            box-shadow: 0px 0px 15px 11px rgba(0,0,0,0.1);
        }

        .fa-regular {
            background-image: linear-gradient(-60deg, #ff5858 0%, #f09819 100%);
            color: transparent;
            background-clip: text;
            -webkit-background-clip: text;
        }

        .fa-face-tired {
            margin-top: 20px;
            font-size: 150px;
        }

        .text-main {
            font-size: 35px;
            color: #14843a;
            font-weight: 500;
            margin-top: 50px;
        }

        .text {
            margin-top: 15px;
        }

        .btn {
            display: inline-block;
            flex: 1 1 auto;
            margin: 10px;
            margin-top: 70px;
            padding: 30px;
            text-align: center;
            text-transform: uppercase;
            transition: 0.5s;
            background-size: 200% auto;
            color: white;
            text-shadow: 0px 0px 10px rgba(0,0,0,0.2);
            box-shadow: 0 0 20px #eee;
            border-radius: 10px;
        }
        a{

            text-decoration: none;
        }
        a:hover {
            cursor: pointer;
        }

        .btn:hover {
            background-position: right center;
        }

        .btn-3 {
            background-image: linear-gradient(to right, #84fab0 0%, #8fd3f4 51%, #84fab0 100%);
        }
    </style>
</head>
<body>
    <div class="main">
        <i class="fa-regular fa-face-tired"></i>
        <div class="text-main" style="font-size: 35px;">Opps!</div>
        <div class="text-main text">
            <span> @message</span>
        </div>
        <div>
            <a href="@Url.Action("Index", "Home")" class="btn btn-3">Tiếp tục mua sắm</a>
        </div>
    </div>
</body>
</html>