    <style>
        .shop-showproduct .dropdown--show__product {
            min-width: 15em;
            position: relative;
            margin-bottom: 5px;
        }

        .shop-showproduct .p_filter_widgets .list li {
            margin-bottom: 0px;
        }

        .shop-showproduct .dropdown--show__product * {
            box-sizing: border-box;
        }

        .shop-showproduct .dropdown--show__product .select {
            width: 85%;
            background-color: #fff;
            color: #2f2727;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 2px #d8dad9 solid;
            border-radius: 4px;
            padding: 5px;
            padding-left: 20px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .shop-showproduct .dropdown--show__product .select-clicked {
            box-shadow: 0px 0px 17px 0px rgba(0,0,0,0.1);
        }

        .shop-showproduct .dropdown--show__product .select:hover {
            background-color: #ede4e4;
        }

        .shop-showproduct .dropdown--show__product .caret {
            height: 0;
            width: 0;
            border-left: 5px solid transparent;
            border-right: 5px solid transparent;
            border-top: 6px solid #cd6262;
            transition: 0.3s;
        }

        .shop-showproduct .dropdown--show__product .caret-rotate {
            transform: rotate(180deg);
        }

        .shop-showproduct .dropdown--show__product .menu {
            list-style: none;
            padding: 0.2em 0.5em;
            background-color: #e7effd;
            box-shadow: 0 0.5em 1em rgba(0, 0, 0, 0.2);
            border-radius: 0.5em;
            color: #9fa5b5;
            transform: translateX(1%);
            opacity: 0;
            display: none;
            transition: 0.2s;
            z-index: 1;
        }

            .shop-showproduct .dropdown--show__product .menu li {
                user-select: none;
                padding: 5px 20px;
                display: block;
                margin: 0.3em 0;
                border-radius: 0.5em;
                cursor: pointer;
            }

                .shop-showproduct .dropdown--show__product .menu li:hover {
                    background-color: #b8cdf1;
                }

        .shop-showproduct .dropdown--show__product .active {
            background-color: #ede4e4
        }

        .shop-showproduct .dropdown--show__product .menu-open {
            width: 83%;
            display: block;
            opacity: 1;
        }

        .shop-showproduct .left_sidebar_area .widgets_inner ul > li:hover > a {
            color: #100236;
        }

        .shop-showproduct .widgets_inner ul {
            padding-left: 0px
        }
    </style>
</head>
