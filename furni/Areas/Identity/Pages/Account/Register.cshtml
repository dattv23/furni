@page
@model RegisterModel


@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title></title>
	<link rel="stylesheet" href="/assets/assets_signup/style.css" />
</head>
<body>
	<div class="container" id="container">
		<div class="form-container sign-up-container">
			<div class="main-login">
				<h1>Create Account</h1>
				@{
					<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
						<div>
							<p>

								@foreach (var provider in Model.ExternalLogins!)
								{
									string btnClass = "";
									string iconClass = "";

									if (provider.Name.Equals("Google", StringComparison.OrdinalIgnoreCase))
									{
										btnClass = "social-google";
										iconClass = "fab fa-google-plus-g";
									}
									else if (provider.Name.Equals("Facebook", StringComparison.OrdinalIgnoreCase))
									{
										btnClass = "social-facebook";
										iconClass = "fab fa-facebook-f";
									}

									<button type="submit" class="@btnClass social" name="provider" value="@provider.Name"><i class="@iconClass"></i></button>
								}
							</p>
						</div>
					</form>
				}
				<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
					<span>or use your email for registration</span>
					<input asp-for="Input.Email" type="text" placeholder="Email" autocomplete="username" aria-required="true" />
					<input asp-for="Input.Password" type="password" placeholder="Password" class="form-control" autocomplete="new-password" aria-required="true" />
					<input asp-for="Input.ConfirmPassword" type="password" placeholder="Comfirm Password" class="form-control" autocomplete="new-password" aria-required="true" />
					<button id="registerSubmit" type="submit" class="btn">Sign Up</button>
				</form>
			</div>
		</div>

		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-left" style="z-index: 999">
					<h1>Welcome Back!</h1>
					<p>
						To keep connected with us please login with your personal info
					</p>
					<a class="btn ghost" asp-area="Identity" asp-page="/Account/Login">Login</a>
				</div>
			</div>
		</div>
	</div>

	<footer>
		<p>
			Created with <i class="fa fa-heart"></i> by
			<a target="_blank" href="https://github.com/dattv23">Truong Van Dat</a>
		</p>
	</footer>
	<script src="https://kit.fontawesome.com/4cba97720e.js"
			crossorigin="anonymous"></script>
	<script src="https://apis.google.com/js/platform.js?onload=init"
			async
			defer></script>
	<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
	<script src="/assets/assets_signin/script.js"></script>
</body>
</html>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}



