@model IEnumerable<furni.Areas.Admin.Models.UserModel>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-center align-items-center">
            <h6 class="m-0 font-weight-bold text-primary mr-auto">Danh sách người dùng</h6>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Họ Tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@(user.FirstName + " " + user.LastName)</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>@user.Address</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-id="@user.Id" class="mr-2"><i class="fas fa-solid fa-pen text-warning"></i></a>
                                    <a href="#" data-toggle="modal" data-target="#confirmDeleteModal" data-user-id="@user.Id" data-user-email="@user.Email"><i class="fas fa-solid fa-trash text-danger"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Confirm Delete Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Are you sure you want to delete this user?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Email: </p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteConfirmButton">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#confirmDeleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Button that triggered the modal
                var userId = button.data('user-id'); // Extract user ID from data-* attributes
                var userEmail = button.data('user-email'); // Extract user email from data-* attributes

                // Display the user's email in the modal body
                var modalBody = $(this).find('.modal-body');
                modalBody.find('p').text("Email: " + userEmail); // Make sure there's a <p> in your modal body for this

                var deleteButton = $(this).find('#deleteConfirmButton');

                // Update the click event for the delete button
                deleteButton.off('click').on('click', function () {
                    $.ajax({
                        url: '/Admin/User/Delete/' + userId,
                        type: 'POST',
                        data: JSON.stringify({ id: userId }),
                        contentType: 'application/json',
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (result) {
                            window.location.reload(); // Reload the page to update the table
                        },
                        error: function (xhr, status, error) {
                            alert('An error occurred. Could not delete user.');
                        }
                    });
                });
            });
        });
    </script>
}
