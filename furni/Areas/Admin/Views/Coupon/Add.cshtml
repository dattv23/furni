@model furni.Areas.Admin.Models.CouponModel

@{
    ViewData["Title"] = "Thêm Coupon";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container w-100 h-100 d-flex justify-content-center">
    <form asp-action="Add" class="w-100" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-12 col-md-6">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-6">
                <label asp-for="DiscountPercentage" class="control-label"></label>
                <input asp-for="DiscountPercentage" class="form-control" type="number" />
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-12 col-md-6">
                <label asp-for="ValidFrom" class="control-label"></label>
                <input asp-for="ValidFrom" class="form-control datetimepicker" />
                <span asp-validation-for="ValidFrom" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-6">
                <label asp-for="ValidUntil" class="control-label"></label>
                <input asp-for="ValidUntil" class="form-control datetimepicker" />
                <span asp-validation-for="ValidUntil" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MinimumOrderAmount" class="control-label"></label>
            <input asp-for="MinimumOrderAmount" class="form-control" type="number" />
            <span asp-validation-for="MinimumOrderAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Thêm mã" class="btn btn-primary" />
        </div>
    </form>
</div>
<div class="text-center">
    <a asp-action="Index" class="text-center">Trở về danh sách</a>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize flatpickr on elements with the class 'datetimepicker'
            flatpickr(".datetimepicker", {
                enableTime: true, // Enable time selection
                dateFormat: "Y-m-d H:i", // Set the desired date-time format
            });
        });
    </script>
}