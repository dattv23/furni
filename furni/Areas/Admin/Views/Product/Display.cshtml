@model furni.Areas.Admin.Models.ProductModel

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 100%;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            <p>@Html.Raw(Model.Description)</p>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StockQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StockQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @{
                string categoryName = null;
                if (ViewBag.Categories != null)
                {
                    foreach (var category in ViewBag.Categories)
                    {
                        if (category.Id == Model.CategoryId)
                        {
                            categoryName = category.Name;
                            break;
                        }
                    }
                }
                @categoryName
            }
        </dd>
    </dl>
</div>
<div class="mb-4">
    <a asp-action="Update" asp-route-id="@Model?.Id" class="btn btn-primary">Cập nhật</a> |
    <a asp-action="Index" class="btn-outline-secondary">Trở về</a>
</div>
